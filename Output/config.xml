<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1600" height="900" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="128"/>
    <fx volume="128"/>
  </audio>
  <scene_menu>
    <background texturepath="Assets/Textures/background_Menu.png"/>
    <pointer animspeed="0.1f" texturepath="Assets/Textures/pointer.png">
      <pushback x="0" y="0" width="18" height="18"/>
      <pushback x="25" y="0" width="18" height="18"/>
    </pointer>
  </scene_menu>
  <scene_die>
    <background texturepath="Assets/Textures/background_Die.png"/>
    <pointer animspeed="0.1f" texturepath="Assets/Textures/pointer.png">
      <pushback x="0" y="0" width="18" height="18"/>
      <pushback x="25" y="0" width="18" height="18"/>
    </pointer>
  </scene_die>
  <scene_level1>
    <player x="100" y="450" texturepath="Assets/Textures/Spritesheet.png" 
            maxJumps="1" dieFxpath="Assets/Audio/Fx/hurt.wav"/>
    <item x="256" y="515" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="416" y="512" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="720" y="189" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="200" y="245" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="500" y="127" texturepath="Assets/Textures/goldCoin.png"/>
  </scene_level1>

  <map>
    <mapfolder path="Assets/Maps/"/>
    <mapfile path="Assets/Maps/Map1(test).tmx"/>
  </map>
  
</config>
